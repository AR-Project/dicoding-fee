{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base",
        "plugin:codeceptjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "linebreak-style": "off",
        "class-methods-use-this": "off",
        "no-alert": "off",
        "no-console": "off",
        "no-restricted-globals": "off",
        "no-prototype-builtins": "off",
        "import/no-extraneous-dependencies": "off"
    }
}